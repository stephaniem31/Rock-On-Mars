{% for activity in activities %}
  <div class="col-10 col-md-4 col-lg-3 card text-light p-0 m-2">
    <img src="{{ activity.image }}" class="card-img-top" style='width:100%; height: 300px'>
    <div class="card-body">
      <span class="badge bg-primary">{{ activity.activity_type }}</span>
      <h5 class="card-title">{{ activity.name }}</h5>
      <p class="card-text">{{ activity.content }}</p>
      <p class="card-text">{{ activity.start_at }}</p>
      {% if isOnHome is defined %}
      {% else %}
        <a href="/activity/show/?id={{ activity.id }}" class="btn btn-primary">See more</a>
        <a href="/activity/join/?memberid={{ user.id }}&activityid={{ activity.id }}" class="btn btn-primary">Join</a>
      {% endif %}
    </div>
  </div>
{% endfor %}